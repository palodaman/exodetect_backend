# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=exodetect

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Training Scheduler Configuration
ENABLE_SCHEDULER=false  # Set to 'true' in production to enable automated retraining
RETRAIN_DAYS=7  # Number of days of data to use for retraining
RETRAIN_MIN_SAMPLES=100  # Minimum samples required for retraining
RETRAIN_INCREMENTAL=true  # Use incremental learning (false for full retraining)

# Model Versioning
MODEL_RETENTION_DAYS=7  # Keep models for 7 days before cleanup

# Organization Limits
MAX_QUERIES_PER_DAY=1000
MAX_USERS_PER_ORG=50
